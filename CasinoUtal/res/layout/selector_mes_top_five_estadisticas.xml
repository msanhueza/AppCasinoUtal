<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.casinoutal.MainActivity$PlaceholderFragment">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:background="#848484"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/textview_seleccionar_fecha_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Seleccione mes y pulse siguiente"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
         />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/seleccionMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingTop="20dp"
        android:paddingLeft="30dp"
        android:orientation="vertical">

	    <Button
	        android:id="@+id/btn_sgte"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        style="@style/CustomStyleButton"
	        android:text="Siguiente"
	        android:onClick="onClickSgte"
	        />
	</LinearLayout>
</LinearLayout>