<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.casinoutal.MainActivity$PlaceholderFragment">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:background="#848484"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/textview_seleccionar_fecha_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Seleccione periodo de fechas deseadas"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
         />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/textview_seleccionar_fecha_desde"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fecha desde:"
         />
        
	    <DatePicker
	        android:id="@+id/selector_fecha_desde"
	        android:layout_width="fill_parent"
	        android:layout_height="150dp"
	        android:calendarViewShown="false"/>
	
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/textview_seleccionar_fecha_hasta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fecha hasta:"
         />
        
	    <DatePicker
	        android:id="@+id/selector_fecha_hasta"
	        android:layout_width="fill_parent"
	        android:layout_height="150dp"
	        android:calendarViewShown="false"/>
	
	</LinearLayout>
 	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:orientation="vertical">
        
		<Button
		     android:id="@+id/btn_five_periodo"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:text="Siguiente"
		     android:onClick="onClickSgte"
		     style="@style/CustomStyleButton"
	     />
	</LinearLayout>
</LinearLayout>